{
  "manifest_version": 3,
  "name": "YouTube Detox",
  "version": "1.0.0",
  "description": "Prevent YouTube doomscrolling by blocking shorts and managing tabs mindfully",
  
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  
  "host_permissions": [
    "*://youtube.com/*",
    "*://*.youtube.com/*"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["*://youtube.com/*", "*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Detox",
    "default_icon": "icons/icon.ico"
  },
  
  "icons": {
    "16": "icons/icon.ico",
    "32": "icons/icon.ico",
    "48": "icons/icon.ico",
    "128": "icons/icon.ico"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["*://youtube.com/*", "*://*.youtube.com/*"]
    }
  ]
}